# .env.prod - Production environment configuration
# IMPORTANT: This file contains defaults. Override sensitive values with environment variables!

# Database settings (OVERRIDE POSTGRES_PASSWORD in production!)
POSTGRES_DB=trains_prod
POSTGRES_USER=trainsAdmin
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
DATABASE_URL=postgresql+psycopg2://trainsAdmin:${POSTGRES_PASSWORD}@db:5432/trains_prod

# Application settings
APP_ENV=production
HW_MODE=hardware
PORT=8000

# Production settings
UVICORN_LOG_LEVEL=warning
UVICORN_RELOAD=false
UVICORN_WORKERS=4

# Version info (set by CI/CD)
GIT_COMMIT=${GIT_COMMIT:-unknown}
BUILT_AT=${BUILT_AT:-unknown}
VITE_APP_VERSION=${GIT_COMMIT:-unknown}
VITE_APP_DEPLOYED=${BUILT_AT:-unknown}

# Production CORS settings (very restrictive)
CORS_ALLOW_ORIGINS=["https://trainstation.yourdomain.com","https://www.trainstation.yourdomain.com"]

# Production security settings
DEBUG=false
LOG_LEVEL=WARNING
SECURE_COOKIES=true
HTTPS_ONLY=true

# Optional: Production monitoring
SENTRY_DSN=${SENTRY_DSN:-}
MONITORING_ENABLED=true

# Image tag for production deployment
IMAGE_TAG=${IMAGE_TAG:-latest}