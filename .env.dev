# .env.dev - Development environment configuration
# Database settings
POSTGRES_DB=trains_dev
POSTGRES_USER=trainsAdmin
POSTGRES_PASSWORD=devpassword
DATABASE_URL=postgresql+psycopg2://trainsAdmin:devpassword@db:5432/trains_dev

# Application settings
APP_ENV=dev
HW_MODE=mock
PORT=8000

# Development-specific settings
UVICORN_LOG_LEVEL=debug
UVICORN_RELOAD=true
UVICORN_WORKERS=1

# Version info (can be overridden by CI/CD)
GIT_COMMIT=dev-local
BUILT_AT=dev-build
VITE_APP_VERSION=dev-local
VITE_APP_DEPLOYED=dev-build

# Development CORS settings (more permissive)
CORS_ALLOW_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:5173","http://127.0.0.1:5173","http://trainstation.local:3000"]

# Optional: Development-specific features
DEBUG=true
LOG_LEVEL=DEBUG