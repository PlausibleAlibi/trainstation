# .env.qa - QA/Testing environment configuration
# Database settings
POSTGRES_DB=trains_qa
POSTGRES_USER=trainsAdmin
POSTGRES_PASSWORD=qapassword
DATABASE_URL=postgresql+psycopg2://trainsAdmin:qapassword@db:5432/trains_qa

# Application settings
APP_ENV=qa
HW_MODE=mock
PORT=8000

# QA-specific settings
UVICORN_LOG_LEVEL=info
UVICORN_RELOAD=false
UVICORN_WORKERS=2

# Version info (should be set by CI/CD)
GIT_COMMIT=${GIT_COMMIT:-qa-build}
BUILT_AT=${BUILT_AT:-qa-build}
VITE_APP_VERSION=${GIT_COMMIT:-qa-build}
VITE_APP_DEPLOYED=${BUILT_AT:-qa-build}

# QA CORS settings (restrictive but allow test domains)
CORS_ALLOW_ORIGINS=["http://localhost:3000","http://qa.trainstation.local","https://qa.trainstation.local"]

# QA-specific features
DEBUG=false
LOG_LEVEL=INFO

# Testing settings
TEST_DATABASE_URL=postgresql+psycopg2://trainsAdmin:qapassword@db:5432/trains_qa_test
TESTING=true